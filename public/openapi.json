{
  "openapi": "3.0.0",
  "info": { "title": "API Gesti칩n Ingresos/Egresos", "version": "1.0.0" },
  "paths": {
    "/api/movimientos": {
      "get": {
        "summary": "Listar movimientos",
        "tags": ["Movimientos"],
        "security": [{ "sessionCookie": [] }],
        "parameters": [
          { "name": "limit", "in": "query", "schema": { "type": "integer", "minimum": 1, "maximum": 100 } },
          { "name": "offset", "in": "query", "schema": { "type": "integer", "minimum": 0 } },
          { "name": "order", "in": "query", "schema": { "type": "string", "enum": ["fecha_asc", "fecha_desc"] } },
          { "name": "from", "in": "query", "schema": { "type": "string", "format": "date" } },
          { "name": "to", "in": "query", "schema": { "type": "string", "format": "date" } },
          { "name": "tipo", "in": "query", "schema": { "type": "string", "enum": ["INGRESO", "EGRESO"] } }
        ],
        "responses": {
          "200": { "description": "Lista paginada", "content": { "application/json": { "schema": { "type": "object", "properties": { "items": { "type": "array" }, "total": { "type": "integer" } } } } },
          "401": { "description": "No autenticado" },
          "403": { "description": "Sin permiso" }
        }
      },
      "post": {
        "summary": "Crear movimiento",
        "tags": ["Movimientos"],
        "security": [{ "sessionCookie": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["concepto", "monto", "fecha", "tipo"],
                "properties": {
                  "concepto": { "type": "string" },
                  "monto": { "type": "number", "minimum": 0.01 },
                  "fecha": { "type": "string", "format": "date" },
                  "tipo": { "type": "string", "enum": ["INGRESO", "EGRESO"] }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Movimiento creado" },
          "400": { "description": "Datos inv치lidos" },
          "401": { "description": "No autenticado" },
          "403": { "description": "Se requiere rol administrador" }
        }
      }
    },
    "/api/usuarios": {
      "get": {
        "summary": "Listar usuarios",
        "tags": ["Usuarios"],
        "security": [{ "sessionCookie": [] }],
        "responses": {
          "200": { "description": "Lista de usuarios" },
          "401": { "description": "No autenticado" },
          "403": { "description": "Se requiere rol administrador" }
        }
      }
    },
    "/api/usuarios/{id}": {
      "get": {
        "summary": "Obtener usuario",
        "tags": ["Usuarios"],
        "security": [{ "sessionCookie": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Usuario" }, "401": { "description": "No autenticado" }, "403": { "description": "Sin permiso" }, "404": { "description": "No encontrado" } }
      },
      "patch": {
        "summary": "Actualizar usuario",
        "tags": ["Usuarios"],
        "security": [{ "sessionCookie": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string" }, "rol": { "type": "string", "enum": ["ADMIN", "USUARIO"] } }
              }
            }
          }
        },
        "responses": { "200": { "description": "Usuario actualizado" }, "400": { "description": "Datos inv치lidos" }, "401": { "description": "No autenticado" }, "403": { "description": "Sin permiso" }, "404": { "description": "No encontrado" } }
      }
    },
    "/api/reportes/resumen": {
      "get": {
        "summary": "Resumen para reportes (saldo, totales, serie)",
        "tags": ["Reportes"],
        "security": [{ "sessionCookie": [] }],
        "responses": {
          "200": {
            "description": "saldoActual, totales.ingresos/egresos, serie por periodo"
          },
          "401": { "description": "No autenticado" },
          "403": { "description": "Se requiere rol administrador" }
        }
      }
    },
    "/api/reportes/csv": {
      "get": {
        "summary": "Descargar reporte CSV",
        "tags": ["Reportes"],
        "security": [{ "sessionCookie": [] }],
        "responses": {
          "200": { "description": "CSV; charset=utf-8; filename=reporte-movimientos.csv" },
          "401": { "description": "No autenticado" },
          "403": { "description": "Se requiere rol administrador" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "sessionCookie": {
        "type": "apiKey",
        "in": "cookie",
        "name": "better-auth.session_token",
        "description": "Sesi칩n autenticada (Better Auth)"
      }
    }
  }
}
